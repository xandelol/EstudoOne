<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/forgot_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Digite o endereço de e-mail associado a sua conta e mandaremos um código de autorização para renovar a senha"
        android:textSize="15sp"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/forgot_email_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/forgot_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textColorHint="@color/colorRedSignUp"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:singleLine="true"/>

    </android.support.design.widget.TextInputLayout>

</LinearLayout>